{
	"name": "kainotes",
	"displayName": "KaiNotes",
	"description": "A VSCode extension to manage your markdown files by tags",
	"version": "0.0.14",
	"repository": {
		"type": "git",
		"url": "https://github.com/noiron/kainotes.git"
	},
	"publisher": "noiron",
	"keywords": [
		"markdown",
		"notes",
		"tags"
	],
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "kainotes",
					"title": "KaiNotes",
					"icon": "media/tag.svg"
				}
			]
		},
		"views": {
			"kainotes": [
				{
					"id": "tags",
					"name": "Tags"
				},
				{
					"id": "filesForTag",
					"name": "Files for Tag"
				},
				{
					"type": "webview",
					"id": "tagSearchView",
					"name": "Tag Search"
				}
			]
		},
		"commands": [
			{
				"command": "kainotes.tagCloud",
				"title": "KaiNotes: Tag Cloud",
				"icon": "$(compass)"
			},
			{
				"command": "kainotes.refresh",
				"title": "KaiNotes: Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "kainotes.reset",
				"title": "KaiNotes: Reset",
				"icon": "$(clear-all)"
			},
			{
				"command": "kainotes.searchTag",
				"title": "KaiNotes: Search Tag"
			},
			{
				"command": "kainotes.toggleSortMethod",
				"title": "KaiNotes: Toggle Sort Method",
				"icon": "$(issues)"
			},
			{
				"command": "kainotes.summary",
				"title": "KaiNotes: Summary"
			},
			{
				"command": "kainotes.renameTag",
				"title": "KaiNotes: Rename Tag"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "kainotes.refresh",
					"when": "view == tags",
					"group": "navigation@10"
				},
				{
					"command": "kainotes.reset",
					"when": "view == tags",
					"group": "navigation@9"
				},
				{
					"command": "kainotes.tagCloud",
					"when": "view == tags",
					"group": "navigation@1"
				},
				{
					"command": "kainotes.toggleSortMethod",
					"when": "view == tags",
					"group": "navigation@2"
				}
			],
			"editor/context": [
				{
					"command": "kainotes.searchTag",
					"when": "editorHasSelection"
				}
			],
			"view/item/context": [
				{
					"command": "kainotes.renameTag",
					"when": "view == tags"
				}
			]
		},
		"configuration": {
			"title": "KaiNotes",
			"properties": {
				"kainotes.highlight.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable highlight tag in files.",
					"order": 0
				},
				"kainotes.highlight.color": {
					"type": "string",
					"default": "#1f1f1f",
					"description": "Tag text color.",
					"order": 1
				},
				"kainotes.highlight.backgroundColor": {
					"type": "string",
					"default": "#d9ad00",
					"description": "Tag background color.",
					"order": 2
				},
				"kainotes.tagCompletion": {
					"type": "boolean",
					"default": true,
					"description": "Auto complete tag when input."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vsce:package": "vsce package",
		"publish": "vsce publish",
		"build:webview": "webpack --config src/sidebar-webview/webpack.config.js --watch"
	},
	"devDependencies": {
		"@babel/core": "^7.23.2",
		"@babel/preset-env": "^7.23.2",
		"@babel/preset-react": "^7.22.15",
		"babel-loader": "^9.1.3",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/react": "^18.2.33",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"@types/react-dom": "^18.2.14",
		"kainotes-tools": "^0.0.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"styled-components": "^6.1.0"
	}
}
