{
	"name": "kainotes",
	"displayName": "KaiNotes",
	"description": "A VSCode extension to manage your markdown files by tags",
	"version": "0.0.8",
	"repository": {
		"type": "git",
		"url": "https://github.com/noiron/kainotes.git"
	},
	"publisher": "noiron",
	"keywords": [
		"markdown",
		"notes",
		"tags"
	],
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:kainotes.tagCloud",
		"onView:tags",
		"onLanguage:markdown"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "kainotes",
					"title": "KaiNotes",
					"icon": "media/tag.svg"
				}
			]
		},
		"views": {
			"kainotes": [
				{
					"id": "tags",
					"name": "Tags"
				},
				{
					"id": "filesForTag",
					"name": "Files for Tag"
				}
			]
		},
		"commands": [
			{
				"command": "kainotes.tagCloud",
				"title": "KaiNotes Tag Cloud",
				"icon": "$(compass)"
			},
			{
				"command": "kainotes.refresh",
				"title": "KaiNotes Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "kainotes.reset",
				"title": "KaiNotes Reset",
				"icon": "$(clear-all)"
			},
			{
				"command": "kainotes.searchTag",
				"title": "KaiNotes Search Tag"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "kainotes.refresh",
					"when": "view == tags",
					"group": "navigation@10"
				},
				{
					"command": "kainotes.reset",
					"when": "view == tags",
					"group": "navigation@9"
				},
				{
					"command": "kainotes.tagCloud",
					"when": "view == tags",
					"group": "navigation@1"
				}
			],
			"editor/context": [
				{
					"command": "kainotes.searchTag",
					"when": "editorHasSelection"
				}
			]
		},
		"configuration": {
			"title": "KaiNotes",
			"properties": {
				"kainotes.highlight.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable highlight tag in files.",
					"order": 0
				},
				"kainotes.highlight.color": {
					"type": "string",
					"default": "#1f1f1f",
					"description": "Tag text color.",
					"order": 1
				},
				"kainotes.highlight.backgroundColor": {
					"type": "string",
					"default": "#d9ad00",
					"description": "Tag background color.",
					"order": 2
				},
				"kainotes.tagCompletion": {
					"type": "boolean",
					"default": true,
					"description": "Auto complete tag when input."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vsce:package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"@vscode/test-electron": "^2.1.3"
	}
}